{
    "name": "@survey-non-tech/server",
    "version": "0.0.0",
    "scripts": {
        "build": "tsc -p tsconfig.build.json && mkdir -p ./dist/data && cp ./src/data/* ./dist/data",
        "serve": "npm run build && firebase serve --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "10"
    },
    "main": "dist/main.js",
    "dependencies": {
        "@nestjs/common": "6.0.5",
        "@nestjs/core": "6.0.5",
        "@nestjs/platform-express": "6.0.5",
        "body-parser": "1.19.0",
        "cors": "2.8.5",
        "firebase-admin": "7.0.0",
        "firebase-functions": "2.3.0",
        "lodash": "4.17.11",
        "reflect-metadata": "0.1.12",
        "rimraf": "2.6.2",
        "rxjs": "6.3.3",
        "uuid": "3.3.2"
    },
    "devDependencies": {
        "@nestjs/testing": "6.0.0",
        "@types/express": "4.16.0",
        "@types/jest": "23.3.13",
        "@types/node": "10.12.18",
        "@types/supertest": "2.0.7",
        "concurrently": "4.1.0",
        "firebase-functions-test": "0.1.6",
        "jest": "23.6.0",
        "nodemon": "1.18.9",
        "prettier": "1.15.3",
        "supertest": "3.4.1",
        "ts-jest": "24.0.2",
        "ts-node": "8.1.0",
        "tsconfig-paths": "3.8.0",
        "tslint": "5.16.0",
        "typescript": "3.4.3",
        "wait-on": "3.2.0"
    },
    "private": true
}
